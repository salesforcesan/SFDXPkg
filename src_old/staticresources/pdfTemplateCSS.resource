@page {
            /* Landscape orientation */
            size:Landscape;
            border: 5px solid #ddd;
    		border-radius:6px;
            margin:5mm;
            padding:10px;
            /* Put page numbers in the top right corner of each
               page in the pdf document. */
            @bottom-right{
                content: "Page " counter(page) " of " counter(pages); font-family: sans-serif;font-size:11px;}
        }

@font-face {
    
}
        
        table {
            border-collapse: collapse;
            border-spacing: 0;
        }
        
        body {
            font-family: sans-serif; 
            font-size: 13px;
            font-weight: 300;
            color: #656565;
        }
        
        h2 {
            width:auto; 
            display: block; 
            padding: 4px 10px; 
            height: 26px;
            border-bottom: 1px solid #0060A9;
            background-color: #FFF; 
            line-height: 26px; 
            letter-spacing: 1px;
            color: #0060A9; 
            font-weight: 300;
            font-size: 18px;
            page-break-after:auto;
        }

.page-inside {
    page-break-inside:avoid;
}
