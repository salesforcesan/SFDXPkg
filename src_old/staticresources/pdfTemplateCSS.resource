.container {
    width:100%;
/*margin:0 auto;*/ }

.section {
    page-break-inside:avoid;
    width: 100%; 
    min-height: 130px; 
    margin-bottom:40px; 
    float: left; 
}

.blueText {
    color:#0060a9; 
    line-height:1.4em;
    margin:0 0 0 30px;
}

.clientLogo {
    width: 185px; 
    height: 130px; 
    float: left;  
    margin:45px 0 0 5px;
}

.clientProduct {
    margin:10px; float: right; }

.eventInfo {
    height: 130px; 
    float: left;
}

.barcode {
    height: 130px; 
    float:right;
    margin-right:10px;
    margin-top:10px;
}

.numberHeader {
  	width: 980px;
  	height: 26px;
  	background: #0060a9;
  	float: left;
  	margin-bottom: 12px;
  	background-color:#0060a9;
  	border:1px solid #0060a9;
}

.numHdrCtr { 
    position:absolute; 
    font-size:16px; 
    font-variant: small-caps; 
    color: #000; 
}

.numHdrTxt { 
    position: absolute;
   	font-size: 16px;
   	color: #fff;
   	line-height: 26px;
   	font-weight: bold; 
   	margin-left: 10px;
   	padding-left: 10px;
   	text-transform:uppercase;
   	letter-spacing:1px;
}

table.clientData {
    width: 100%; 
    border-width: 0; 
    clear:both; /*float:left;*/ 
}

table.clientData th {
    font-weight:bold; 
    padding: 1.5em 10px; 
    background: #eee; 
    font-size:.875em; 
    text-align: center;
    font-weight:300;
    line-height: 1em;
}    

table.clientData td {
    border-bottom:1px solid #ddd; 
    text-align: center; 
    padding:1em 10px; 
    font-size:12px;
    line-height: 1em;
}

table.clientData.footer td {
    border-bottom:none  
}

td {
    font-size: 14px;
    color:grey;
}

.head-divider{
  	border-top:1px solid #0060a9;
    border-bottom:1px solid #CF0A2C;
    height:1px;margin:10px 0 0 0;
