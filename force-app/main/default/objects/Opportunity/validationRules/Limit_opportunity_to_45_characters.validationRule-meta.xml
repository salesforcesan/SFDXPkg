<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Limit_opportunity_to_45_characters</fullName>
    <active>true</active>
    <errorConditionFormula>Len( Name ) &gt; 45</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Please limit the Opportunity name to 45 characters</errorMessage>
</ValidationRule>
