<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>validateTargetType</fullName>
    <active>true</active>
    <errorConditionFormula>AND (ISNEW(),ProjectService__r.NumberOfTargets__c &gt; 0,   ProjectService__r.TargetType__c !=  Target__r.RecordType.Name)</errorConditionFormula>
    <errorMessage>Target Types do not match.</errorMessage>
</ValidationRule>
